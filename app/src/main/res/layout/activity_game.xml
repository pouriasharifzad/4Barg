<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="335dp"
        android:layout_height="505dp"
        android:background="@drawable/rect_table"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <!-- کارت‌های روی زمین -->

    <ImageView
        android:id="@+id/table_card_1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:src="@drawable/card_back"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toStartOf="@id/table_card_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView" />

    <ImageView
        android:id="@+id/table_card_2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="5dp"
        android:src="@drawable/card_back"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toStartOf="@id/table_card_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/table_card_1"
        app:layout_constraintTop_toTopOf="@id/imageView" />

    <ImageView
        android:id="@+id/table_card_3"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:src="@drawable/card_back"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toStartOf="@id/table_card_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/table_card_2"
        app:layout_constraintTop_toTopOf="@id/imageView" />

    <ImageView
        android:id="@+id/table_card_4"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:src="@drawable/card_back"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/table_card_3"
        app:layout_constraintTop_toTopOf="@id/imageView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1F1B1B"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:elevation="9dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/opponent_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_default_avatar" />

        <TextView
            android:id="@+id/opponent_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName" />

        <TextView
            android:id="@+id/opponent_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXP" />

        <TextView
            android:id="@+id/opponent_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1F1B1B"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="9dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.855">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_default_avatar" />

        <TextView
            android:id="@+id/user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName" />

        <TextView
            android:id="@+id/user_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXP" />

        <TextView
            android:id="@+id/user_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins" />
    </LinearLayout>

    <com.example.a4Barg.utils.HandView
        android:id="@+id/user_handView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/transparent"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.617" />

    <com.example.a4Barg.utils.HandView
        android:id="@+id/opponent_handView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/transparent"
        android:elevation="8dp"
        android:rotationX="180"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>